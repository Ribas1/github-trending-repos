<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemDescriptionTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DetailsTitleTextStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailsTextBigTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DetailsTextBigDarkTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DetailsRegularTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>